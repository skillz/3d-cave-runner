<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="#333" />
                    <solid
                        android:color="#eee" />

                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center|right"
                    android:src="@drawable/spinner_arrow"/>
            </item>
        </layer-list>
    </item>
</selector>
